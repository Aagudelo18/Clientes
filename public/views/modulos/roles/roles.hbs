{{> header }}



 <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-12 text-center">
            <h1>Roles</h1>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      <div class="card">
        <div class="card-header">
          <a class="btn btn-info btn-sm" href="/crearRol">
              <i class="fas fa-new-alt">
              </i>
              Crear Rol
          </a>
        </div>
        <div class="card-body p-0">
          <table class="table table-striped">
              <thead>
                  <tr>
                      <th style="width: 4%">
                          Código Rol
                      </th>
                      <th style="width: 1%">
                          Nombre rol
                      </th>
                      <th style="width: 6%">
                          Permisos
                      </th>
                      <th style="width: 1%" class="text-center">
                          Estado
                      </th>
                      <th style="width: 6%" class="text-center">
                          Acciones
                      </th>
                  </tr>
              </thead>
              <tbody id="contenido">
                
              </tbody>
          </table>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->

    </section>
    <!-- /.content -->
   <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Editar Cliente</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="" method="POST">
                <div class="form-group">
                  <label for="codigo">Codigo del rol</label>
                  <input type="text" name="codigo" id="codigo" class="form-control" placeholder="Ingrese el codigo  del rol " required>
                  <span id="codigoError" class="erroresFormulario"></span>
                </div>
                <div class="form-group">
                  <label for="nombre">Nombre</label>
                  <input type="text" name="nombre" id="nombre" class="form-control" placeholder="Ingrese el nombre del rol " required>
                  <span id="nombreError" class="erroresFormulario"></span>
                </div>
                <div class="form-group">
                  <label for="estado">Estado</label>
                  <select name="estado" id="estado" class="form-control" required>
                    <option value="" disabled selected>Seleccione el estado</option>
                    <option value="true">Activo</option>
                    <option value="false">Inactivo</option>
                  </select>
                  <span id="estadoError" class="erroresFormulario"></span>
                  </div>
                <div class="form-group">
             Permisos <br>
          <div class="form-check">
            <input class="form-check-input checkbox-rol" type="checkbox" id="checkboxUsuarios" name="roles[]" value="usuarios">
            <label class="form-check-label" for="checkboxUsuarios">Usuarios</label>
          </div>
          <div class="form-check">
            <input class="form-check-input checkbox-rol" type="checkbox" id="checkboxEmpleados" name="roles[]" value="empleados">
            <label class="form-check-label" for="checkboxEmpleados">Empleados</label>
          </div>
          <div class="form-check">
            <input class="form-check-input checkbox-rol" type="checkbox" id="checkboxClientes" name="roles[]" value="clientes">
            <label class="form-check-label" for="checkboxClientes">Clientes</label>
          </div>
          <div class="form-check">
            <input class="form-check-input checkbox-rol" type="checkbox" id="checkboxCategorias" name="roles[]" value="categorias">
            <label class="form-check-label" for="checkboxCategorias">Categorías</label>
          </div>
          <div class="form-check">
            <input class="form-check-input checkbox-rol" type="checkbox" id="checkboxProductos" name="roles[]" value="productos">
            <label class="form-check-label" for="checkboxProductos">Productos</label>
          </div>
          <div class="form-check">
            <input class="form-check-input checkbox-rol" type="checkbox" id="checkboxPedidos" name="roles[]" value="pedidos">
            <label class="form-check-label" for="checkboxPedidos">Pedidos</label>
          </div>
          <div class="form-check">
            <input class="form-check-input checkbox-rol" type="checkbox" id="checkboxOrdenProduccion" name="roles[]" value="ordenproduccion">
            <label class="form-check-label" for="checkboxOrdenProduccion">Orden de producción</label>
          </div>
          <div class="form-check">
            <input class="form-check-input checkbox-rol" type="checkbox" id="checkboxVentas" name="roles[]" value="ventas">
            <label class="form-check-label" for="checkboxVentas">Ventas</label>
          </div>
          
            <span id="permisosError" class="erroresFormulario"></span>
           </div>
                
              </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
        <button id="btnActualizarRol" type="button" class="btn btn-primary">Actualizar</button>
      </div>
    </div>
  </div>
</div>
  </div>
  <!-- /.content-wrapper -->

